{
  "name": "japan-food-tracker-backend",
  "version": "1.0.6",
  "description": "日本餐飲/超商新品追蹤網站後端 API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "test:connection": "tsx src/test-connection.ts",
    "test:insert": "tsx src/test-insert.ts",
    "scraper:run": "tsx src/scraper/index.ts",
    "translate:names": "tsx src/scripts/translate-names.ts",
    "scraper:dev": "tsx watch src/scraper/index.ts",
    "test:scraper": "tsx test-scraper-basic.ts",
    "test:scraper:config": "tsx test-scraper-basic.ts config",
    "test:full": "tsx test-deep-crawling.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "japan",
    "food",
    "tracker",
    "supabase",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.20.0",
    "@supabase/supabase-js": "^2.47.10",
    "@types/get-pixels": "^3.3.4",
    "@types/quantize": "^1.0.2",
    "cheerio": "^1.1.2",
    "crawlee": "^3.15.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "get-pixels": "^3.3.3",
    "nodemailer": "^8.0.1",
    "p-limit": "^7.3.0",
    "p-retry": "^7.1.1",
    "playwright": "^1.57.0",
    "quantize": "^1.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
